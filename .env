# Application Configuration
NODE_ENV=development
PORT=5000
APP_NAME=Blog Backend API
API_VERSION=v1

# Database Type Selection (postgres or mongodb)
DATABASE_TYPE=postgres

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=newpassword
POSTGRES_DB=blog_production
POSTGRES_DB_TEST=blog_test

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/blog_production
MONGO_URI_TEST=mongodb://localhost:27017/blog_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m

# Client Configuration
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=false

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourblog.com
EMAIL_FROM_NAME=Blog Platform

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=blog-images

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-key
CORS_CREDENTIALS=true

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=false
ENABLE_SOCKET=false

# Admin Configuration
ADMIN_EMAIL=admin@yourblog.com
ADMIN_PASSWORD=ChangeThisPassword123!

# Webhooks (optional)
WEBHOOK_SECRET=your-webhook-secret

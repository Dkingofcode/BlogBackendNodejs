{
  "name": "blog",
  "version": "1.0.0",
  "description": "Production-grade blog backend with PostgreSQL and MongoDB support",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:postgres": "NODE_ENV=development DATABASE_TYPE=postgres nodemon src/server.js",
    "dev:mongo": "NODE_ENV=development DATABASE_TYPE=mongodb nodemon src/server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate:postgres": "sequelize-cli db:migrate",
    "migrate:rollback": "sequelize-cli db:migrate:undo",
    "seed:postgres": "sequelize-cli db:seed:all",
    "build": "echo 'No build step required for Node.js'",
    "start:prod": "NODE_ENV=production node src/server.js"
  },
  "keywords": [
    "blog",
    "backend",
    "nodejs",
    "express",
    "postgresql",
    "mongodb",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.3",
    "slugify": "^1.6.6",
    "sanitize-html": "^2.11.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "mongoose": "^8.0.3",
    "redis": "^4.6.12",
    "socket.io": "^4.6.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "marked": "^11.1.1",
    "dompurify": "^3.0.8",
    "jsdom": "^23.0.1",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}